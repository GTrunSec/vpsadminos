lxc.net.<%= index %>.type = veth
lxc.net.<%= index %>.name = <%= name %>
lxc.net.<%= index %>.link = <%= link %>
lxc.net.<%= index %>.flags = up
<% if hwaddr -%>
lxc.net.<%= index %>.hwaddr = <%= hwaddr %>
<% end -%>
<% ips.each do |v, addrs| -%>
<% addrs.each do |addr| -%>
lxc.net.<%= index %>.ipv<%= v %>.address = <%= addr.to_string %>
<% end -%>
<% end -%>

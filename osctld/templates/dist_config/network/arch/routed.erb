# This file is generated by osctld from vpsAdminOS. Do not edit this file, all
# changes will be lost.

Description="osctl network configuration for <%= netif.name %>"
Interface=<%= netif.name %>
BindToInterfaces=()
Connection=ethernet
ForceConnect=yes

<% netif.active_ip_versions.each do |v| -%>
<% if v == 4 -%>
IP=static
Address=( "<%= netif.via[v].ct_ip.to_string %>" <%= netif.ips(v).map { |addr| "\"#{addr.to_string}\"" }.join(' ') %> )
Routes=( <% if netif.ips(v).any? %>"default via <%= netif.via[v].host_ip.to_s %> src <%= netif.ips(v).first.to_s %>"<% end %> )
<% elsif v == 6 -%>
IP6=static
Address6=( "<%= netif.via[v].ct_ip.to_string %>" <%= netif.ips(v).map { |addr| "\"#{addr.to_string}\"" }.join(' ') %> )
Routes6=( <% if netif.ips(v).any? %>"default via <%= netif.via[v].host_ip.to_s %> src <%= netif.ips(v).first.to_s %>"<% end %> )
<% end %>
<% end -%>
